<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recyclerview_card_margin"
    android:padding="@dimen/recyclerview_card_padding"
    android:background="@drawable/border_list_item">

    <TextView
        android:id="@+id/cardNameText"
        style="@style/ListItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.80"
        android:layout_marginTop="@dimen/recyclerview_card_text_margin"
        android:text="Card Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardManaCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mana Cost"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.80"
        android:layout_marginBottom="@dimen/recyclerview_card_text_margin"
        android:layout_marginTop="@dimen/recyclerview_card_text_margin"
        style="@style/ListItemText"
        app:layout_constraintStart_toStartOf="@id/cardNameText"
        app:layout_constraintTop_toBottomOf="@id/cardNameText" />
    <TextView
        android:id="@+id/cardQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.80"
        android:layout_marginBottom="@dimen/recyclerview_card_text_margin"
        android:layout_marginTop="@dimen/recyclerview_card_text_margin"
        style="@style/ListItemText"
        app:layout_constraintStart_toStartOf="@id/cardNameText"
        app:layout_constraintTop_toBottomOf="@id/cardManaCost" />
<!--
    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textOff="Out"
        android:textOn="In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" /> -->
    <Button
        android:id="@+id/in_out"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="In"
        android:layout_marginBottom="@dimen/recyclerview_card_text_margin"
        android:layout_marginTop="@dimen/recyclerview_card_text_margin"
        style="@style/ListItemText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />


</androidx.constraintlayout.widget.ConstraintLayout>